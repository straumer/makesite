#!/bin/sh

src_path=$1
lang=${2:-en}
m4_cmd="m4 -D ms_src_path=$src_path -D ms_lang=$lang gen/$lang.macros macros/content macros/end -"

if [ -f gen/$lang.site.html ]; then
    ./bin/indent gen/$lang.site.html | $m4_cmd
else
    sed -n "/^[^=]/G;/\n=\($lang\|\)$/P;/^=/h" $src_path | ./bin/indent | $m4_cmd
fi
